<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="#FDF7F9">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"/>

                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="14dp"
                    style="@style/HeaderTextView"
                    android:text="Products made with love"
                    android:textColor="#B8889C"/>
            </LinearLayout>


            <TextView
                android:layout_marginTop="12dp"
                style="@style/HeaderTextView"
                android:text="Уходовые товары"/>

            <HorizontalScrollView
                android:layout_marginTop="16dp"
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv11"
                        style="@style/FlowerCardViewStyle"
                        android:layout_height="100dp"
                        android:layout_marginStart="0dp">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <TextView
                                android:layout_marginTop="0dp"
                                android:id="@+id/nameTV11"
                                style="@style/FlowerNameTextView"
                                android:text="Мыло фигурное"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="450 тг / шт"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/soap"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV11"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv21"
                        android:layout_height="100dp"
                        style="@style/FlowerCardViewStyle">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <TextView
                                android:id="@+id/nameTV21"
                                android:layout_marginTop="0dp"
                                style="@style/FlowerNameTextView"
                                android:text="Скраб для тела"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="800 тг / шт"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/skrab"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV21"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv31"
                        android:layout_height="100dp"
                        style="@style/FlowerCardViewStyle">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <TextView
                                android:layout_marginTop="0dp"
                                android:id="@+id/nameTV31"
                                style="@style/FlowerNameTextView"
                                android:text="Бомбочка"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="450 тг / шт"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/bomb"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV31"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv41"
                        android:layout_height="100dp"
                        style="@style/FlowerCardViewStyle">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:id="@+id/nameTV41"
                                style="@style/FlowerNameTextView"
                                android:text="Бальзам для губ"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="250 тг / шт"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/lipstick"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV41"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                style="@style/HeaderTextView"
                android:text="Украшения"/>

            <HorizontalScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv12"
                        style="@style/FlowerCardViewStyle"
                        android:layout_height="100dp"
                        android:layout_marginStart="0dp">

                        <LinearLayout style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/nameTV12"
                                style="@style/FlowerNameTextView"
                                android:layout_marginTop="0dp"
                                android:text="Серьги" />

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="1500 тг" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    style="@style/FlowerImageView"
                                    android:src="@drawable/earrings" />

                                <TextView
                                    android:id="@+id/numTV12"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv22"
                        style="@style/FlowerCardViewStyle"
                        android:layout_height="100dp">

                        <LinearLayout style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/nameTV22"
                                style="@style/FlowerNameTextView"
                                android:layout_marginTop="0dp"
                                android:text="Браслет" />

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="1250 тг" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    style="@style/FlowerImageView"
                                    android:src="@drawable/bracelet" />

                                <TextView
                                    android:id="@+id/numTV22"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv32"
                        style="@style/FlowerCardViewStyle"
                        android:layout_height="100dp">

                        <LinearLayout style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/nameTV32"
                                style="@style/FlowerNameTextView"
                                android:layout_marginTop="0dp"
                                android:text="Серьги" />

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="1750 тг" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    style="@style/FlowerImageView"
                                    android:src="@drawable/earrings2" />

                                <TextView
                                    android:id="@+id/numTV32"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv42"
                        style="@style/FlowerCardViewStyle"
                        android:layout_height="100dp">

                        <LinearLayout style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:id="@+id/nameTV42"
                                style="@style/FlowerNameTextView"
                                android:text="Браслет" />

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="1250 тг" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    style="@style/FlowerImageView"
                                    android:src="@drawable/bracelet2" />

                                <TextView
                                    android:id="@+id/numTV42"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                style="@style/HeaderTextView"
                android:text="Еда"/>

            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv13"
                        style="@style/FlowerCardViewStyle"
                        android:layout_height="100dp"
                        android:layout_marginStart="0dp">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="16dp"/>

                            <TextView
                                android:layout_marginTop="0dp"
                                android:id="@+id/nameTV13"
                                style="@style/FlowerNameTextView"
                                android:text="Жент в шоколаде"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="250 тг / шт"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/zhent"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV13"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv23"
                        android:layout_height="100dp"
                        style="@style/FlowerCardViewStyle">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <TextView
                                android:id="@+id/nameTV23"
                                android:layout_marginTop="0dp"
                                style="@style/FlowerNameTextView"
                                android:text="Курт домашний"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="1200 тг / ассорти"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/qurt"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV23"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv33"
                        android:layout_height="100dp"
                        style="@style/FlowerCardViewStyle">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <TextView
                                android:layout_marginTop="0dp"
                                android:id="@+id/nameTV33"
                                style="@style/FlowerNameTextView"
                                android:text="Шоколад с вишней"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="550 тг / 100 г"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/chocolate"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV33"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv43"
                        android:layout_height="100dp"
                        style="@style/FlowerCardViewStyle">

                        <LinearLayout
                            style="@style/FlowerLinearLayoutStyle">

                            <TextView
                                android:id="@+id/nameTV43"
                                style="@style/FlowerNameTextView"
                                android:text="Чак-чак"/>

                            <TextView
                                style="@style/FlowerPriceTextView"
                                android:text="800 тг / 100 г"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:src="@drawable/chakchak"
                                    style="@style/FlowerImageView"/>

                                <TextView
                                    android:id="@+id/numTV43"
                                    style="@style/NumberTextView"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                app:cardCornerRadius="50dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="#7590CD">

                <LinearLayout
                    android:id="@+id/dragAndDropLL"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical|left">

                    <ImageView
                        android:id="@+id/basketImg"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/basket"/>

                    <TextView
                        android:id="@+id/priceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="#EFEFEF"
                        android:text="Перетащи в корзину"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>